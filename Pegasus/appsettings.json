{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId", "WithAssemblyName" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ToBeRemoved": {
    "taskFilterId": 1,
    "cookieExpiryDays": 30
  },
  "Cache": {
    "TaskFilters": {
      "ExpiryDays": 1
    }
  },
  "apiRoot": "https://pegasus2api.local",
  "Token": {
    "Issuer": "https://pegasus2api.local",
    "Audience": "https://pegasus2.local",
    "SigningKey": "MySecretKeyIsSecretSoDoNotTell",
    "ExpiryInMinutes": 720
  },
  "PegasusSettings": {
    "CommentSortOrder": 0,
    "PageSize": 15,
    "PaginationEnabled": true,
    "CookieExpiryDays": 180,
    "TaskFilterId": 1,
    "ProjectId": 0
  },
  "Email": {
    "Sender": "simon.davall@herefordsecurities.co.uk"
    }
}

