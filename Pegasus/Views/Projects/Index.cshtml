@model IEnumerable<Pegasus.Library.Models.ProjectModel>

@{
    ViewData["Title"] = "Projects";
}

<h4>Projects</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="offset-sm-1 col-sm-8 table-responsive">
    <table class="table table-striped table-narrow-lined">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectPrefix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPinned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="table-row-condensed">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                    <td>
                        <div class="table-row-condensed">
                            @Html.DisplayFor(modelItem => item.Id)
                        </div>
                    </td>
                    <td>
                        <div class="table-row-condensed">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                    </td>
                    <td>
                        <div class="table-row-condensed">
                            @Html.DisplayFor(modelItem => item.ProjectPrefix)
                        </div>
                    </td>
                    <td>
                        <div class="table-row-condensed">
                            @Html.DisplayFor(modelItem => item.IsPinned)
                        </div>
                    </td>
                    <td>
                        <div class="table-row-condensed">
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>